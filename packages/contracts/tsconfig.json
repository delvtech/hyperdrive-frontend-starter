{
  "extends": "@starter-repo/tsconfig/base.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "src": [
        "src"
      ],
      "src/*": [
        "src/*"
      ],
      "test": [
        "test"
      ],
      "test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "./scripts",
    "./src",
    "./test"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "hardhat.config.ts"
  ]
}